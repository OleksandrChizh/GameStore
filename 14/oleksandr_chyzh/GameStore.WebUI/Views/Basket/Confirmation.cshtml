@using Resources
@model GameStore.WebUI.ViewModels.Basket.ConfirmPaymentViewModel

@{
    ViewBag.Title = Resource.Confirmation;
}

<div class="form-container">
    @using (Html.BeginForm("ConfirmPayment", "Basket"))
    {
        @Html.LabelFor(m => m.Code)<br />
        @Html.EditorFor(m => m.Code, new { htmlAttributes = new { @class = "form-control" } })<br />
        @Html.ValidationMessageFor(m => m.Code)<br /><br />

        <input class="btn-orange" type="submit" value=@Resource.Confirm />
    }
</div>

