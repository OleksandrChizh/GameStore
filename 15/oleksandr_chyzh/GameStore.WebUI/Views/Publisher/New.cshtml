@using Resources
@model GameStore.WebUI.ViewModels.Publisher.PublisherViewModel
@{
    ViewBag.Title = Resource.PublisherCreating;
}

<div class="form-container">
    @using (Html.BeginForm("New", "Publisher", FormMethod.Post))
    {
        @Html.LabelFor(m => m.CompanyName)<br />
        @Html.EditorFor(m => m.CompanyName, new { htmlAttributes = new { @class = "form-control" } })<br />
        @Html.ValidationMessageFor(m => m.CompanyName)<br />

        @Html.LabelFor(m => m.Description)<br />
        @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })<br />
        @Html.ValidationMessageFor(m => m.Description)<br />

        @Html.LabelFor(m => m.HomePage)<br />
        @Html.EditorFor(m => m.HomePage, new { htmlAttributes = new { @class = "form-control" } })<br />
        @Html.ValidationMessageFor(m => m.HomePage)<br />

        @Html.LabelFor(m => m.IsContainEnglishTranslation)<br />
        @Html.EditorFor(m => m.IsContainEnglishTranslation)<br />

        @Html.LabelFor(m => m.Description)<br />
        @Html.TextAreaFor(m => m.EnglishDescription, new { @class = "form-control" })<br />
        @Html.ValidationMessageFor(m => m.EnglishDescription)<br /><br />

        <input class="btn-orange" type="submit" value=@Resource.Create />
    }
</div>