@using Resources
@model GameStore.WebUI.ViewModels.PlatformType.PlatformTypeViewModel

@{
    ViewBag.Title = Resource.New;
}

<div class="form-container">
    @using (Html.BeginForm("New", "PlatformType"))
    {
        @Html.LabelFor(m => m.Type)<br />
        @Html.EditorFor(m => m.Type, new { htmlAttributes = new { @class = "form-control" } })<br />
        @Html.ValidationMessageFor(m => m.Type)<br />

        <input class="btn-orange" type="submit" value=@Resource.Create />
    }
</div>